<div{{ attributes }}>
    <img src="{{ asset('/images/cta.jpg') }}"
         class="rounded-2xl w-full m-auto h-[50vh] object-cover overflow-hidden mb-10" alt="">
    {{ form_start(form, {'method': 'GET'}) }}
    <div class="lg:flex lg:gap-10 pt-10">
        <div class="w-1/4 hidden lg:block">
            <div class="flex gap-x-5 items-center">
                <twig:Subtitle
                        tag="h2"
                        label="Recipes"
                        class="pt-3"/>
            </div>

            <twig:Accordion label="Dish Type" id="dish-type">
                <twig:Accordion:Item>
                    {{ form_row(form.meat) }}
                </twig:Accordion:Item>
                <twig:Accordion:Item>
                    {{ form_row(form.seaFood) }}
                </twig:Accordion:Item>
                <twig:Accordion:Item>
                    {{ form_row(form.vegetarian) }}
                </twig:Accordion:Item>
                <twig:Accordion:Item>
                    {{ form_row(form.proteinFoods) }}
                </twig:Accordion:Item>
                <twig:Accordion:Item>
                    {{ form_row(form.pastas) }}
                </twig:Accordion:Item>
            </twig:Accordion>
            <div id="accordion-nested-parent" data-accordion="collapse" class="mt-10">
                <h2 id="accordion-collapse-heading-1">
                    <button type="button" class="flex items-center justify-between w-full text-black"
                            data-accordion-target="#accordion-collapse-body-1" aria-expanded="false"
                            aria-controls="accordion-collapse-body-1">
                        <span>Dish Type</span>
                        <span class="w-4">
                            {{ ux_icon('plus-solid') }}
                        </span>

                    </button>
                </h2>
                <div id="accordion-collapse-body-1" class="hidden" aria-labelledby="accordion-collapse-heading-1">
                    <div class="pl-3">
                        <form action="{{ path('app_home') }}" method="POST">
                            <ul>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="meat" name="meat">
                                        Meat
                                    </label>
                                </li>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="sea-food" name="sea-food">
                                        Sea food
                                    </label>
                                </li>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="vegetarian" name="vegetarian">
                                        Vegetarian
                                    </label>
                                </li>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="proteins" name="proteins">
                                        Protein foods
                                    </label>
                                </li>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="pasta" name="pasta">
                                        Pastas
                                    </label>
                                </li>
                            </ul>
                            <button class="">Apply filter</button>
                        </form>
                    </div>
                </div>

                <h2 id="accordion-collapse-heading-2" class="mt-6">
                    <button type="button" class="flex items-center justify-between w-full text-black"
                            data-accordion-target="#accordion-collapse-body-2" aria-expanded="false"
                            aria-controls="accordion-collapse-body-2">
                        <span>Meal Type</span>
                        <span class="w-4">
                            {{ ux_icon('plus-solid') }}
                        </span>

                    </button>
                </h2>
                <div id="accordion-collapse-body-2" class="hidden" aria-labelledby="accordion-collapse-heading-2">
                    <div class="pl-3">
                        <form action="{{ path('app_home') }}" method="POST">
                            <ul>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="breakfast" name="breakfast">
                                        Breakfast
                                    </label>
                                </li>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="brunch" name="brunch">
                                        Brunch
                                    </label>
                                </li>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="lunch" name="lunch">
                                        Lunch
                                    </label>
                                </li>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="dinner" name="dinner">
                                        Dinner
                                    </label>
                                </li>
                                <li class="pt-3 hover:text-red-500">
                                    <label for="checkbox">
                                        <input type="checkbox" class="pt-1" id="cocktail" name="cocktail">
                                        Cocktail
                                    </label>
                                </li>
                            </ul>
                            <button>apply</button>
                        </form>
                    </div>
                </div>

                <h2 id="accordion-collapse-heading-3" class="mt-6">
                    <button type="button" class="flex items-center justify-between w-full text-black"
                            data-accordion-target="#accordion-collapse-body-3" aria-expanded="false"
                            aria-controls="accordion-collapse-body-3">
                        <span>Allergies</span>
                        <span class="w-4">
                            {{ ux_icon('plus-solid') }}
                        </span>

                    </button>
                </h2>
                <div id="accordion-collapse-body-3" class="hidden" aria-labelledby="accordion-collapse-heading-3">
                    <div class="pl-3">
                        <ul>
                            <li class="pt-3 hover:text-red-500">
                                <label for="checkbox">
                                    <input type="checkbox" class="pt-1">
                                    Nuts
                                </label>
                            </li>
                            <li class="pt-3 hover:text-red-500">
                                <label for="checkbox">
                                    <input type="checkbox" class="pt-1">
                                    Gluten
                                </label>
                            </li>
                            <li class="pt-3 hover:text-red-500">
                                <label for="checkbox">
                                    <input type="checkbox" class="pt-1">
                                    Fish
                                </label>
                            </li>
                            <li class="pt-3 hover:text-red-500">
                                <label for="checkbox">
                                    <input type="checkbox" class="pt-1">
                                    Dairy
                                </label>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

        </div>
        <div class="lg:w-3/4">

            {{ form_row(form.search) }}
            <div class="grid md:grid-cols-2 xl:grid-cols-4 2xl:grid-cols-6 gap-4 mb-10">
                <twig:Button
                        label="Search"/>

                <twig:Button
                        label="Clear filter"
                        variant="white" type="reset"
                        data-controller="reset-search" data-action="reset-search#reset"/>
            </div>

            <div class="grid lg:grid-cols-2 xl:grid-cols-3 gap-x-10 gap-y-5 ">
                {% for recipe in this.recipes %}
                    <a href="{{ path('recipe_show', {'uuid':recipe.uuid}) }}"
                       class="md:w-1/2 m-auto lg:w-full mb-10 rounded-2xl shadow">
                        {% if recipe.imageName %}
                            <img class="w-full h-52 object-cover overflow-hidden rounded-t-xl"
                                 src="{{ vich_uploader_asset(recipe, 'image') }}" alt="{{ recipe.name }}">
                        {% endif %}
                        <div class="flex w-1/2 gap-x-2 py-2 px-3 m-auto xl:w-full justify-around">
                            <div class="flex gap-x-2 whitespace-nowrap">
                                <div class="w-4 self-center">{{ ux_icon('clock') }}</div>
                                <p>{{ recipe.time }} min</p>
                            </div>
                            <div class="flex gap-x-2 whitespace-nowrap">
                                <div class="w-4 self-center">{{ ux_icon('star-solid') }}</div>
                                <p>{{ recipe.rating }}</p>
                            </div>
                            <div class="flex gap-x-2 whitespace-nowrap">
                                <div class="w-4 self-center">{{ ux_icon('user-group') }}</div>
                                <p>{{ recipe.people }}</p>
                            </div>

                        </div>
                        <h2 class="text-xl w-1/2 font-semibold text-center p-2 xl:w-full  m-auto">{{ recipe.name }}</h2>
                        <div class="flex gap-x-2 p-2 rounded">

                        </div>
                    </a>
                {% endfor %}
            </div>

        </div>
    </div>
    {{ form_end(form) }}
</div>
