{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="lg:grid lg:grid-cols-2 gap-x-5">
        <div class="flex flex-col justify-center my-auto w-2/3 px-6 py-8 h-fit shadow">
            <twig:Title
                    label="Edit user"/>
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <twig:Button
                    label="Submit"/>
            {{ form_end(form) }}
        </div>
        <img class="rounded-2xl h-[80vh] w-full object-cover overflow-hidden hidden lg:flex"
             src="{{ asset('images/userEdit.jpg') }}" alt="">
    </div>

{% endblock %}
