{% extends 'base.html.twig' %}

{% block title %}Add recipe{% endblock %}

{% block body %}
<twig:Title
label="Add recipe" />
{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.ingredients) }}
    {{ form_row(form.description) }}
    {{ form_row(form.image) }}
    {{ form_row(form.time) }}
    <twig:Button
        label="Add recipe"
        class="mb-10"
    />
    {{ form_end(form) }}
{% endblock %}
