{% extends 'base-landing.html.twig' %}

{% block title %}
    Recipes found
{% endblock %}
    {% block body %}
        <div class="relative h-screen">
            <img class="w-full h-full object-cover opacity-50" src="{{ asset('images/landingImg.jpg') }}" alt="">
            <div class="absolute inset-0 flex items-center justify-center z-10 p-4">
                <div class="relative w-full max-w-md max-h-full">
                    <div class="relative rounded-lg shadow bg-white">
                        <div class="flex items-center justify-between p-4 border-b rounded-t">
                            <h3 class="text-xl font-medium text-blue-950">
                                Recipes for you
                            </h3>
                        </div>
                        <div class="p-4">
                            <div id="controls-carousel" class="relative w-full" data-carousel="static">
                                <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
                                    {% for recipe in recipes %}
                                        <div class="hidden duration-700 ease-in-out" data-carousel-item>
                                            <img class="object-cover overflow-hidden m-auto xl:m-0 w-full h-32 rounded-xl"
                                                 src="{{ vich_uploader_asset(recipe, 'image') }}"
                                                 alt="{{ recipe.name }}">
                                            {{ recipe.name }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <!-- Slider controls -->
                                <button type="button"
                                        class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
                                        data-carousel-prev>
                                <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                                    <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true"
                                         xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                              stroke-width="2"
                                              d="M5 1 1 5l4 4"/>
                                    </svg>
                                    <span class="sr-only">Previous</span>
                                </span>
                                </button>
                                <button type="button"
                                        class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
                                        data-carousel-next>
                                    <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                                        <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180"
                                             aria-hidden="true"
                                             xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                                  stroke-width="2"
                                                  d="m1 9 4-4-4-4"/>
                                        </svg>
                                    <span class="sr-only">Next</span>
                                </span>
                                </button>
                            </div>
                            <div class="flex space-x-2">
                                <twig:Button
                                        variant="primary" type="submit"
                                        label='Update'/>
                                <twig:Button
                                        type="button" variant="white"
                                        label='Cancel'/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}



