{% extends 'base-security.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <section>
        <div class="lg:grid lg:grid-cols-2 gap-x-5">
            <div class="flex flex-col justify-center px-6 py-8 md:h-screen lg:py-0">
                <div class="w-full bg-white rounded-lg shadow-lg md:mt-0 sm:max-w-md xl:p-0">
                    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl ">
                            Create an account
                        </h1>
                        {{ form_start(form) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.plainPassword) }}
                        {{ form_row(form.repeatPlainPassword) }}
                        <button type="submit"
                                class="w-full text-white mt-5 bg-red-500 hover:bg-red-400 rounded-lg px-5 py-2.5 text-center">
                            Create an account
                        </button>
                        <p class="font-light text-gray-500 mt-5 ">
                            Already have an account? <a href="{{ path('app_login') }}"
                                                        class="font-medium text-gray-600 hover:underline">Login
                                here</a>
                        </p>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <img class="rounded-2xl h-[80vh] w-full object-cover overflow-hidden hidden lg:flex"
                 src="{{ asset('images/register.jpg') }}" alt="">
        </div>
    </section>
{% endblock %}
