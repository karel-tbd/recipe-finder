{% extends 'base-security.html.twig' %}

{% block title %}Forgot password{% endblock %}

{% block body %}
    <section>
        <div class="xl:grid xl:grid-cols-2 gap-x-5">
            <div class="flex flex-col justify-center px-6 py-8 md:h-screen xl:py-0">
                <div class="w-full bg-white rounded-lg shadow-lg md:mt-0 sm:max-w-md xl:p-0">
                    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl ">
                            Reset your password
                        </h1>
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger block mb-2 text-red-500"
                                 role="alert">{{ flash_error }}</div>
                        {% endfor %}
                        <p class="block mb-2 text-gray-900 ">
                            Enter your email address, and we will send you a
                            link to reset your password.
                        </p>
                        {{ form_start(requestForm) }}

                        <div class="mb-5">
                            {{ form_row(requestForm.email) }}
                        </div>

                        <button type="submit"
                                class="w-full text-white bg-red-500 mb-3 hover:bg-red-400 rounded-lg px-5 py-2.5 text-center">
                            Sign in
                        </button>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
            <img class="rounded-2xl h-[80vh] w-full object-cover overflow-hidden hidden xl:flex"
                 src="{{ asset('images/login.jpg') }}" alt="">
        </div>

    </section>
{% endblock %}
